<?xml version="1.0" encoding="UTF-8"?>
<config>
    <autoConfig>
        {% if wxconfig_params_ldap is defined %}
        <ldap>
            <cache>
                <numberOfUsers>{{ wxconfig_params_ldap.numberOfUsers | default('10',true) }}</numberOfUsers>
                <credentialTimeToLiveMin>{{ wxconfig_params_ldap.credentialTimeToLiveMin | default('60',true) }}</credentialTimeToLiveMin>
            </cache>
            <serverList>
                <server updateIfExists="{{ wxconfig_params_ldap.updateIfExists | default('true',true) }}" deleteOnUnload="{{ wxconfig_params_ldap.deleteOnUnload | default('false',true) }}">
                    <url></url>
                    <authentication>
                        <principal></principal>
                        <password></password>
                    </authentication>
                    <connection>
                        <timeoutSec></timeoutSec>
                        <poolSize>
                            <min></min>
                            <max></max>
                        </poolSize>
                    </connection>
                    <userDn>
                        <synthesize>
                            <prefix></prefix>
                            <suffix></suffix>
                        </synthesize>
                        <query>
                            <idProperty></idProperty>
                            <rootDn></rootDn>
                        </query>
                    </userDn>
                    <group>
                        <default></default>
                        <memberAttribute></memberAttribute>
                        <query>
                            <idProperty></idProperty>
                            <rootDn></rootDn>
                        </query>
                    </group>
                </server>
            </serverList>
        </ldap>
    </autoConfig>
</config>